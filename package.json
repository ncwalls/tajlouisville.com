{
  "name": "wpframework",
  "version": "2.0.0",
  "description": "Custom installer for the Makespace WordPress framework",
  "main": "index.js",
  "scripts": {
    "beforerun": "npm install adm-zip async os ncp prompt simple-git",
    "editor": "npm run beforerun && node installer.js --edit-framework && npm run afterrun",
    "installer": "npm run beforerun && node installer.js && npm run afterrun",
    "afterrun": "npm uninstall adm-zip async os ncp prompt simple-git && npm install"
  },
